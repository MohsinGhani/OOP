#include "stdafx.h"
#include <iostream>

using namespace std;

int binaryCountOne(int num){
	int counter = 0;
	if (num == 0){
		return 0;
	}
		if (num % 2 == 1){
			return 1 + binaryCountOne(num / 2);
		}
		if (num % 2 == 0){
			return binaryCountOne(num / 2);
		}

}

int _tmain(int argc, _TCHAR* argv[])
{
	int number;
	cout << "Enter a number: ";
	cin >> number;
	cout << "Number of one = " << binaryCountOne(number) << endl;
	return 0;
}
