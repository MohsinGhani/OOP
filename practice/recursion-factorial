// ConsoleApplication6.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>

using namespace std;

unsigned int getFactorial(unsigned int num){
	if(num == 0){
		return 1;
	}
	return num = num * getFactorial(num-1);
}

int _tmain(int argc, _TCHAR* argv[])
{
	int num;
	cout << "Enter a number: ";
	cin >> num;
	cout << "Factorial: " << num << "! = " << getFactorial(num) << endl;
	return 0;
}
