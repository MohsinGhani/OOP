// Week5Lecture1.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "date.h"
#include <iostream>

using namespace std;

int main()
{
	Date myDate(28, 12, 2017);
	cout << "Is " << myDate.GetDay() << "-" << myDate.GetMonth() << "-" <<
		myDate.GetYear() << " a valid date: " << myDate.IsValidDate() << endl;
	myDate.SetDay(29);
	cout << "Is " << myDate.GetDay() << "-" << myDate.GetMonth() << "-" <<
		myDate.GetYear() << " a valid date: " << myDate.IsValidDate() << endl;
	myDate.SetYear(2020);
	cout << "Is " << myDate.GetDay() << "-" << myDate.GetMonth() << "-" << myDate.GetYear() << " a valid date: " << myDate.IsValidDate() << endl;

	int addDays;
	cout << "add days: ";
	cin >> addDays;
	myDate.addDays(addDays);
	cout << "After Add Days: " << myDate.GetDay() << "-" << myDate.GetMonth() << "-" << myDate.GetYear() << " a valid date: " << myDate.IsValidDate() << endl;
	return 0;
}

