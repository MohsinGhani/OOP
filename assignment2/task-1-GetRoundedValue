#include "stdafx.h"
#include <iostream>

using namespace std;

int GetRoundedValue(int value, unsigned int round);

int _tmain(int argc, _TCHAR* argv[])
{
	int input1, input2;
	cout << "Enter first input: ";
	cin >> input1;
	cout << "Enter second input: ";
	cin >> input2;

	cout << "Rounded Value = " << GetRoundedValue(input1,input2) << endl;
	return 0;
}

int GetRoundedValue(int value, unsigned int round){
	if(round == 0){
		return value;
	}
	switch(round){
		case 1:
			if(value%10 >=5){
			value = (value+9)/10;
			return value * 10;
			}
			value = value/10;
			return value = value * 10;
		case 2:
			if(value%100 >=50){
			value = (value+90)/100;
			return value * 100;
			}
			value = value/100;
			return value = value * 100;
		case 3:
			if(value%1000 >=500){
			value = (value+900)/1000;
			return value * 1000;
			}
			value = value/1000;
			return value = value * 1000;
	}

	return 0;
};

