// ConsoleApplication4.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>

using namespace std;

struct Price{
	int rupees;
	int paisas;
}price1,price2;

int _tmain(int argc, _TCHAR* argv[])
{
	cout << "Enter Rupees 1: ";
	cin >> price1.rupees;
	cout << "Enter Paisas 1: ";
	cin >> price1.paisas;
	cout << "Enter Rupees 2: ";
	cin >> price2.rupees;
	cout << "Enter Paisas 2: ";
	cin >> price2.paisas;
	
	int rupeesSum = price1.rupees + price2.rupees;
	int paisasSum = price1.paisas + price2.paisas;
	
	if (paisasSum >= 100){
		rupeesSum++;
		paisasSum = paisasSum - 100;
	}
	cout << rupeesSum << endl << paisasSum;
	return 0;
}
