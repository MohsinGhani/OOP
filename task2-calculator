// task2.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>

using namespace std;

int _tmain(int argc, _TCHAR* argv[])
{
	int first, second;
	char myOperator;
	std::cout << "Enter a first number: ";
	std::cin >> first;
	std::cout << "Enter a second number: ";
	std::cin >> second;
	std::cout << "Enter a operator e.g +,-,*,/,%,&,|,^: ";
	std::cin >> myOperator;

	switch (myOperator){
		case '+':
		std::cout << "Sum of these number is: " <<  first + second << "\n";
		break;

		case '-':
		std::cout << "Subtraction of these number is: " << first - second << '\n';
		break;

		case '*':
		std::cout << "Multiplication of these number is: " << first * second << '\n';
		break;

		case '/':
		std::cout << "Division of these number is: " << first / second << '\n';
		break;

		case '%':
		std::cout << "Modulus of these number is: " << first % second << '\n';
		break;

		case '&':
		std::cout << "Bitwise AND of these number is: " << (first & second) << '\n';
		break;

		case '|':
		std::cout << "Bitwise OR of these number is: " << (first | second) << '\n';
		break;

		case '^':
		std::cout << "Bitwise XOR of these number is: " << (first ^ second) << '\n';
		break;
	}

	return 0;
}

